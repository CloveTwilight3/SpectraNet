# Discord Bot Configuration
DISCORD_TOKEN=your_bot_token_here
CLIENT_ID=your_bot_client_id_here

# Database Configuration
DB_HOST=postgres
DB_PORT=5432
DB_NAME=spectranet_bot
DB_USER=postgres
DB_PASSWORD=secure_password_123

# Honeypot Role Configuration
# Format: ROLE_ID:DURATION_IN_DAYS,ROLE_ID:DURATION_IN_DAYS
# Examples:
# - 90 days = 3 months
# - 365 days = 1 year  
# - 2190 days = 6 years
HONEYPOT_ROLES_CONFIG=1234567890123456789:90,1234567890123456790:365,1234567890123456791:2190

# Honeypot Channel IDs (comma-separated) - These result in PERMANENT bans
HONEYPOT_CHANNELS=1234567890123456792,1234567890123456793

# Optional: Logging Channel ID (for ban/timeout notifications)
LOG_CHANNEL_ID=your_log_channel_id_here

# Optional: pgAdmin Configuration (for database management)
PGADMIN_PASSWORD=admin123

# Development Settings (set to 'development' for local development)
NODE_ENV=production

# Email Forwarding Configuration
EMAIL_CLIENT_ID=your_azure_app_client_id
EMAIL_CLIENT_SECRET=your_azure_app_client_secret
EMAIL_TENANT_ID=your_azure_tenant_id
EMAIL_FORWARD_CHANNEL_ID=your_discord_channel_id

# Optional: Email filtering
# EMAIL_FORWARD_FROM=important@company.com,alerts@service.com
# EMAIL_FORWARD_SUBJECT=URGENT,ALERT,IMPORTANT

# Optional: Polling settings
EMAIL_POLL_INTERVAL=5
EMAIL_MAX_BODY_LENGTH=1000

# OpenAI
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini
OPENAI_MAX_TOKENS=1000

DATABASE_SSL=true