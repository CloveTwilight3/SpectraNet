# Discord Bot Configuration
DISCORD_TOKEN=your_bot_token_here
CLIENT_ID=your_bot_client_id_here

# Database Configuration
DB_HOST=postgres
DB_PORT=5432
DB_NAME=honeypot_bot
DB_USER=postgres
DB_PASSWORD=secure_password_123

# Honeypot Role Configuration
# Format: ROLE_ID:DURATION_IN_DAYS,ROLE_ID:DURATION_IN_DAYS
# Examples:
# - 90 days = 3 months
# - 365 days = 1 year  
# - 2190 days = 6 years
HONEYPOT_ROLES_CONFIG=1234567890123456789:90,1234567890123456790:365,1234567890123456791:2190

# Honeypot Channel IDs (comma-separated) - These result in PERMANENT bans
HONEYPOT_CHANNELS=1234567890123456792,1234567890123456793

# Optional: Logging Channel ID (for ban/timeout notifications)
LOG_CHANNEL_ID=your_log_channel_id_here

# Optional: pgAdmin Configuration (for database management)
PGADMIN_PASSWORD=admin123

# Development Settings (set to 'development' for local development)
NODE_ENV=production