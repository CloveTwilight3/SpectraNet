{
  "name": "discord-honeypot-bot",
  "version": "2.0.0",
  "description": "Discord bot for honeypot role and channel moderation with database integration",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "watch": "tsc -w",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f discord_bot",
    "db:reset": "docker-compose down -v && docker-compose up -d postgres",
    "lint": "eslint src/**/*.ts",
    "test": "jest"
  },
  "dependencies": {
    "discord.js": "^14.14.1",
    "dotenv": "^16.3.1",
    "pg": "^8.11.3",
    "@discordjs/voice": "^0.16.1",
    "prism-media": "^1.3.5",
    "libsodium-wrappers": "^0.7.13",
    "gtts": "^0.2.1",
    "@google-cloud/text-to-speech": "^5.0.1"
  },
  "devDependencies": {
    "@types/node": "^20.10.4",
    "@types/pg": "^8.10.9",
    "typescript": "^5.3.3",
    "ts-node": "^10.9.1",
    "eslint": "^8.56.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.8",
    "@types/gtts": "^0.2.1"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "discord",
    "bot",
    "moderation",
    "honeypot",
    "typescript",
    "postgresql"
  ],
  "author": "Clove Twilight",
  "license": "MIT"
}